<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SystemActivity">


    <LinearLayout

        android:id="@+id/newExpenseLayout"
        android:layout_width="300dp"
        android:layout_height="330dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@color/header"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginLeft="250dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/closebtn"
                android:id="@+id/exit_NEW_OUTCOME_WINDOWE_Btn"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@color/SecundaryMesseges"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="הוצאה חדשה"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="קבועה חודשית" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="חד פעמית" />


        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/ProductName_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:hint="על מה הוצאנו?"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/ProductAmount_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:hint="כמה עלה לנו?"
                android:inputType="number"
                android:padding="10dp"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/AddnewOutcomeSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="הוסף הוצאה" />


    </LinearLayout>













    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Wallpaper"
        android:id="@+id/MainSystem"
        android:visibility="visible"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        >



        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/header"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="שלום דניאל כהן"
                    android:textStyle="bold"
                    android:textColor="@color/icons"
                    android:textSize="15sp"
                    android:id="@+id/NameDisplay_TV"/>

                <TextView
                    android:id="@+id/IncomeDisplay_TV"
                    android:layout_width="202dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/OutcomeDisplay_TV"
                    android:textColor="@color/icons"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="49dp"
                    android:text="הכנסות 5000" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/NameDisplay_TV"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/incomeicon"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-31dp"
                    android:layout_toEndOf="@+id/IncomeDisplay_TV"
                    android:background="@drawable/outcomeicon" />



                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/OutcomeDisplay_TV"
                    android:layout_width="198dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="49dp"
                    android:textColor="@color/icons"
                    android:text="הוצאות 5000" />

                <TextView
                    android:id="@+id/MoneyLeft_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="30dp"
                    android:text="נותרו החודש 500 שקלים"
                    android:textColor="@color/icons"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/usersettings"
                    android:id="@+id/UserSettings"/>

                <Button
                    android:id="@+id/AddNewOutcome"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/newoutcome" />

                <Button
                    android:id="@+id/AppSettings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/appsettings"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/IncomeDisplay_TV" />







            </RelativeLayout>



        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:id="@+id/recycler_view_Widget">


            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="הוסף הוצאות"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="190dp"
                android:textSize="20sp"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/DeleteAllExpenses_BTN"
                android:text="מחק את כל ההוצאות"
                android:textSize="15sp" />

        </LinearLayout>










        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Wallpaper"
        android:id="@+id/NewUserLayout"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלום משתמש חדש"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="28sp"

            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לפני שמתחילים נצטרך שתמלא את הפרטים הבאים:"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >







            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:layout_marginBottom="10dp"
                >
                    <EditText
                        android:padding="10dp"
                        android:id="@+id/FullName_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="שם מלא"
                        android:textDirection="rtl"
                        android:inputType="textPersonName"
                        />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:layout_marginBottom="10dp">
                <EditText
                    android:padding="10dp"
                    android:id="@+id/CODE_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="קוד סיסמא לשמירה על פרטיותך"
                    android:inputType="numberPassword"
                    android:textDirection="rtl"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:layout_marginBottom="10dp">
                <EditText
                    android:padding="10dp"
                    android:id="@+id/Income_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" הכנסה חודשית משכורת חודשית"
                    android:inputType="numberDecimal"
                    android:textDirection="rtl"
                    />
            </android.support.design.widget.TextInputLayout>








        </LinearLayout>






        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wallfield3"
            android:textSize="20dp"
            android:textColor="@color/icons"
            android:textStyle="bold"
            android:id="@+id/Submit_BTN"


            android:text="אישור"/>






    </LinearLayout>








</RelativeLayout>