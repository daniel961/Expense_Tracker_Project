<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SystemActivity">




    <RelativeLayout
        android:id="@+id/personal_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/header"
        android:visibility="gone"
        android:padding="15dp"
        >


        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/back_personal_layout_btn"
            android:text="חזור"/>

        <TextView
            android:id="@+id/personal_titel_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/back_personal_layout_btn"
            android:gravity="center"
            android:text="איזור אישי"
            android:textColor="@color/icons"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/personal_titel_tv"
            android:text="באיזור זה תוכל לשנות כל הפרטים האישיים"
            android:gravity="center"
            android:textColor="@color/icons"
            />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColorHint="@color/icons"
            android:layout_marginTop="117dp">

            <EditText
                android:textColorHint="@color/icons"
                android:textColorLink="@color/icons"
                android:textColorHighlight="@color/icons"
                android:shadowColor="@color/icons"
                android:textColor="@color/icons"
                android:id="@+id/personal_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="כתוב שם חדש"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/icons"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="162dp">

            <EditText
                android:textColorHint="@color/icons"
                android:textColorLink="@color/icons"
                android:textColorHighlight="@color/icons"
                android:shadowColor="@color/icons"
                android:textColor="@color/icons"
                android:id="@+id/personal_income_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="גובה הכנסה חודשית"
                android:inputType="number"
                android:padding="10dp"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/personal_submit_details_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="אישור פרטים" />







    </RelativeLayout>












<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/intro_wall"
    android:visibility="gone"
    android:id="@+id/introduction_layout"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/intro_close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סגור הוראות שימוש"/>

    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">



        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v4.view.ViewPager>


    </RelativeLayout>


</LinearLayout>
















    <RelativeLayout
        android:id="@+id/appGuideLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/guidewall"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp"
            android:gravity="center"
            android:text="מדריך שימוש באפליקציה"
            android:textColor="@color/icons"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/exitGuide_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-59dp"
            android:background="@drawable/closebtn" />

        <Button
            android:id="@+id/nextGuide_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="220dp"
            android:background="@drawable/next_btn"
            />

        <Button
            android:id="@+id/prevGuide_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/prev_btn"
             />


    </RelativeLayout>


    <LinearLayout

        android:id="@+id/newExpenseLayout"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:background="@color/header2"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/exit_NEW_OUTCOME_WINDOWE_Btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginLeft="250dp"
                android:background="@drawable/closebtn"
                android:gravity="right" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@color/SecundaryMesseges"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="הוצאה חדשה"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/ProductName_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:hint="על מה הוצאנו?"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/ProductAmount_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:hint="כמה עלה לנו?"
                android:inputType="number"
                android:padding="10dp"
                android:textDirection="rtl" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/AddnewOutcomeSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="הוסף הוצאה" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/MainSystem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Wallpaper"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:visibility="visible">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/header">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/NameDisplay_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:text="שלום דניאל כהן"
                    android:textColor="@color/icons"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/IncomeDisplay_TV"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/OutcomeDisplay_TV"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="49dp"
                    android:text="הכנסות 5000"
                    android:textColor="@color/icons"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/NameDisplay_TV"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/incomeicon" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-31dp"
                    android:layout_toEndOf="@+id/IncomeDisplay_TV"
                    android:background="@drawable/outcomeicon" />


                <TextView
                    android:id="@+id/OutcomeDisplay_TV"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="49dp"
                    android:layout_marginTop="5dp"
                    android:text="הוצאות 5000"
                    android:textColor="@color/icons"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/MoneyLeft_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="10dp"
                    android:text="נותרו החודש 500 שקלים"
                    android:textColor="@color/icons"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/UserSettings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/NameDisplay_TV"
                    android:background="@drawable/usersettings" />

                <Button
                    android:id="@+id/AddNewOutcome"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/newoutcome" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="82dp"
                    android:layout_marginTop="50dp"
                    android:text="הוסף הוצאה"
                    android:textColor="@color/icons"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="איזור אישי"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/icons"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"

                    android:text="הוראות שימוש"
                    android:textColor="@color/icons"
                    android:textSize="13sp" />


                <Button
                    android:id="@+id/AppSettings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/appsettings" />


            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_Widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">


            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="190dp"
                android:gravity="center"
                android:text="הוסף הוצאות"
                android:textSize="20sp"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/DeleteAllExpenses_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="מחק את כל ההוצאות"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Wallpaper"
        android:id="@+id/NewUserLayout"
        android:padding="10dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלום משתמש חדש"
            android:textStyle="bold"
            android:layout_marginTop="10dp"

            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="28sp"

            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="לפני שמתחילים נצטרך שתמלא את הפרטים הבאים:"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >







            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:layout_marginBottom="10dp"
                >
                    <EditText
                        android:padding="10dp"
                        android:id="@+id/FullName_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="שם מלא"
                        android:textDirection="rtl"
                        android:inputType="textPersonName"
                        />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:layout_marginBottom="10dp">
                <EditText
                    android:padding="10dp"
                    android:id="@+id/CODE_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="קוד סיסמא לשמירה על פרטיותך"
                    android:inputType="numberPassword"
                    android:textDirection="rtl"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallfield"
                android:layout_marginBottom="10dp">
                <EditText
                    android:padding="10dp"
                    android:id="@+id/Income_ET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" הכנסה חודשית משכורת חודשית"
                    android:inputType="numberDecimal"
                    android:textDirection="rtl"
                    />
            </android.support.design.widget.TextInputLayout>








        </LinearLayout>






        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wallfield3"
            android:textSize="20dp"
            android:textColor="@color/icons"
            android:textStyle="bold"
            android:id="@+id/Submit_BTN"


            android:text="אישור"/>






    </LinearLayout>




</RelativeLayout>